---
import Layout from '../layouts/Layout.astro';
import Personaje from '../components/Personajes.astro';
import Personajes from '../components/Personajes.astro';
import PersonajeInfo from '../components/PersonajeInfo.astro';

const selectPersonaje = (name: string) => `./img/personajes/${name}.png`;
---

<Layout title="Mortal Kombat Selector">
	<main class="relative flex justify-center items-center text-center size-full h-screen bg-center bg-cover bg-no-repeat" style="background-image: url(./img/background.jpg);">
	  <div class="absolute inset-0 bg-black bg-opacity-20 z-0"></div>
	  <div class="z-10 w-full">
		<div class="absolute bottom-10 left-10 w-[360px]">
			  <img src="./img/mortal_kombat_title.png" alt="">
		</div>
		<div class="absolute top-10 right-10 w-24">
				<img src="./img/mk_11_logo.png" alt="">
		</div>
		<section class="w-full flex justify-center relative">
			<div>
				<PersonajeInfo
				nombrePersonaje='Jax'
				descripcionPersonaje='Un soldado cibernético y oficial de las Fuerzas Especiales, conocido por sus implantes mecánicos en los brazos que le otorgan una fuerza sobrehumana.'
				/>
			</div>
			<Personajes 
			personajeImg={selectPersonaje('jax')}/>
		</section>
		</div>
	</main>
  </Layout>
  